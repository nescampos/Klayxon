@{
}

@section Header {
    <header>
		<h2>Login</h2>
	</header>
	<p>Login to your account</p>
	<ul class="actions">
		<li><a href="@Url.Action("CreateAccount","Home")" class="button">Create account</a></li>
	</ul>
}


<div class="row">
    <div class="col-2">
        <p><br /></p>

    </div>
    <div class="col-9">

        <br /><br />

        <p>
            Public Key: <input type="text" class="publicKey form-control" /> <br />
            Private Key: <input type="text" class="privateKey form-control" /> <br />
        </p>
        <input type="button" class="btn btn-success" value="Login" id="loginBtn" /> <br />

    </div>
</div>







@section Scripts
{
    <script type="text/javascript">
        var publicKey = localStorage.getItem('publicKey');
        if(publicKey != null) {
            location.href = "/Wallet/Index";
        }

        $('#loginBtn').click(function() {
            var publicKey = $('.publicKey').val();
            var privateKey = $('.privateKey').val();
            if(publicKey == '' || privateKey == '') {
                alert('Enter your public and private key for login')
            }
            else {
                login();
            }
        });
    </script>
}